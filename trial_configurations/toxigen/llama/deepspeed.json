{
    "train_micro_batch_size_per_gpu": "auto",
    "gradient_accumulation_steps": 1,
    "optimizer": {
        "type": "AdamW",
        "params": {
        "lr": 1e-5
        }
    },
    "fp16": {
        "enabled": false
    },
    "zero_optimization": {
        "stage": 2,
        "contiguous_gradients": true,
        "overlap_comm": true,
        "reduce_scatter": true,
        "reduce_bucket_size": 5e8,
        "allgather_bucket_size": 5e8,
        "offload_optimizer": {
            "device": "cpu"
        }
    }
}
